{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "argument_type",
    "definitions": {
        "argument_type": {
            "description": "Description of the inputs and outputs to a function", "type": "object",
            "properties": {
                "type": {
                    "enum": [
                        "number", "ndarray", "string", "python object", "boolean", "integer", "float", "complex",
                        "timedelta", "datetime", "list", "dict"
                    ], "description": "Type of the argument. Must be one of the types recognized by DLHub."
                }, "description": {
                    "type": "string", "description": "Human-friendly description of the argument"
                }, "shape": {
                    "type": "array",
                    "description": "Shape of an input ndarray, required if type is ndarray. Any dimensions that can be arbitrary sizes may be annotated with `null`. E.g., [null, 4]",
                    "items": {
                        "anyOf": [{"type": "integer", "minimum": 1}, {"type": "null"}]
                    }
                }, "python_type": {
                    "type": "string",
                    "description": "Name of the python type. Give the full module path (e.g., pymatgen.core.Composition)"
                }, "item_type": {
                    "oneOf": [
                        {
                            "$ref": "#definitions/argument_type",
                            "definition": "Argument is a list of unknown length, but all of the same type."
                        }, {
                            "type": "array",
                            "definition": "Argument is a list of known length. Each type in this list is the type of each member of the argument list",
                            "items": {
                                "$ref": "#definitions/argument_type"
                            }
                        }
                    ]
                }, "properties": {
                    "type": "object",
                    "description": "Definitions for the keys of a dictionary type",
                    "additionalProperties": {"string": {"$ref": "#defintions/argument_type"}}
                }
            },
            "required": ["type"],
            "oneOf": [
                {
                    "properties": {"type": {"enum": ["ndarray"]}}, "required": ["shape"]
                }, {
                    "properties": {"type": {"enum": ["python object"]}}, "required": ["python_type"]
                }, {
                    "properties": {"type": {"enum": ["list"]}}, "required": ["item_type"]
                }, {
                    "properties": {"type": {"enum": ["dict"]}}, "required": ["properties"]
                }, {
                    "not": {
                        "properties": {"type": {"enum": ["ndarray", "python object", "list", "dict"]}}
                    }
                }
            ],
            "additionalProperties": false
        }
    },
    "$ref": "#definitions/argument_type"
}